<div class="form-horizontal">
    <div class="form-group {{if (and errors titleError) 'has-error'}}">
        <label class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            {{input type="text" value=model.title class="form-control" placeholder="Book title"}}
              {{#if (and errors titleError)}}
              <span class="text-danger">
                {{titleError}}</span>
              {{/if}}
        </div>
    </div>
    <div class="form-group {{if (and errors authorError) 'has-error'}}">
        <label class="col-sm-2 control-label">Author</label>
        <div class="col-sm-10">
            {{input type="text" value=model.author class="form-control" placeholder="Book author"}}
              {{#if (and errors authorError)}}
              <span class="text-danger">
                {{authorError}}</span>
              {{/if}}
        </div>
    </div>
    <div class="form-group {{if (and errors releaseYearError) 'has-error'}}">
        <label class="col-sm-2 control-label">Release year</label>
        <div class="col-sm-10">
            {{input type="text" value=model.releaseYear class="form-control" placeholder="Release year"}}
              {{#if (and errors releaseYearError)}}
              <span class="text-danger">
                {{releaseYearError}}</span>
              {{/if}}
        </div>
    </div>
    <div class="form-group {{if (and errors ISBNError) 'has-error'}}">
        <label class="col-sm-2 control-label">ISBN</label>
        <div class="col-sm-10">
            {{input type="text" value=model.ISBN class="form-control" placeholder="Book ISBN"}}
              {{#if (and errors ISBNError)}}
              <span class="text-danger">
                {{ISBNError}}</span>
              {{/if}}
            {{input type="hidden" value=model.reader class="form-control" }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary" {{action 'buttonClicked' model}}>{{buttonLabel}}</button>
        </div>
    </div>
</div>