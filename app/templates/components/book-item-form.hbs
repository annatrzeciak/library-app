<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            {{input type="text" value=model.title class="form-control" placeholder="Book title"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Author</label>
        <div class="col-sm-10">
            {{input type="text" value=model.author class="form-control" placeholder="Book author"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Release year</label>
        <div class="col-sm-10">
            {{input type="number" min='1900' max='2100' step='1' value=model.releaseYear class="form-control" }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">ISBN</label>
        <div class="col-sm-10">
            {{input type="text" value=model.ISBN class="form-control" placeholder="Book ISBN"}}
            {{input type="hidden" value=model.reader class="form-control" }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary" {{action 'buttonClicked' model}}>{{buttonLabel}}</button>
        </div>
    </div>
</div>