<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
        <div class="card-pf pb-2">
          <header class="login-pf-header">
            <h1>Log In to Your Account</h1>
          </header>
          {{#if errorMessage}}
          <div class="error-message">Login failed: {{errorMessage}}</div>
          {{/if}}
          <form class="mb-1" {{action 'authenticate' on='submit' }}>
            <div class="form-group">
              <label class="sr-only" for="emailInput">Email address</label>
              {{input type="email" value=email class="form-control input-lg" placeholder="Enter email" required=true}}
            </div>
            <div class="form-group">
              <label class="sr-only" for="passwordInput">Password
              </label>
              {{input type="password" value=password class="form-control input-lg" placeholder="Enter password" required=true}}
            </div>
            <button type="submit" class="btn btn-primary btn-block btn-lg">LogIn</button>
          </form>
          <p class="login-pf-signup ">Need an account? {{#link-to 'librarian.signup'}}Sign up{{/link-to}}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>